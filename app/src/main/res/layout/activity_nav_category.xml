<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NavCategoryActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_nav_cat_det"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#57F65E"
        app:title="Detailed Products"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_cat_det_recyclerview"
        android:layout_below="@id/toolbar_nav_cat_det"
        android:layout_margin="5dp"/>



</RelativeLayout>