<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    tools:context=".activities.RegistrationActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageviewsignuppage"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        app:cardElevation="20dp"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="11dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/rashan"
            tools:ignore="VisualLintBounds" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/txtgreetings1"
        android:layout_width="410dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:text="We Are Very Grateful To Have You On Our Platform"
        android:textSize="17sp"
        android:fontFamily="@font/alata"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_below="@id/imageviewsignuppage"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtgreetings"
        android:layout_width="410dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Fill Your Cart Now!"
        android:textSize="19sp"
        android:fontFamily="@font/alata"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_below="@id/txtgreetings1"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtgreetings"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="13dp"
        android:fontFamily="@font/alata"
        android:hint="Name"
        android:inputType="text"
        android:padding="13dp" />

    <EditText
        android:id="@+id/etemailsignup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etname"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:fontFamily="@font/alata"
        android:drawablePadding="13dp"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/account"
        android:padding="13dp"/>

    <EditText
        android:id="@+id/etpasswordsignup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etemailsignup"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:fontFamily="@font/alata"
        android:inputType="textPassword"
        android:drawablePadding="13dp"
        android:drawableLeft="@drawable/keylog"
        android:padding="13dp"/>

    <Button
        android:id="@+id/btnsignup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:padding="14dp"
        android:layout_below="@id/etpasswordsignup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/alata"
        android:textStyle="bold"
        android:backgroundTint="#4AE651" />

<!--    <com.github.ybq.android.spinkit.SpinKitView-->
<!--        android:id="@+id/spinkit"-->
<!--        style="@style/SpinKitView.Large.Pulse"-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_below="@id/btnsignup"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:visibility="gone"-->
<!--        app:SpinKit_Color="#673AB7" />-->
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnsignup"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtalready"
        android:text="Already Have An Account?"
        android:textStyle="bold"
        android:layout_below="@id/progressbar"
        android:layout_marginStart="90dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/txtsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbar"
        android:layout_centerInParent="true"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/txtalready"
        android:text="Sign In"
        android:textColor="#4AE651"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>